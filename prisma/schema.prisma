datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Move {
  rock
  paper
  scissors
}

enum ResultKind {
  positive
  negative
  neutral
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  games    Game[]
}

model Game {
  id        String   @id @default(uuid()) @db.Uuid
  date    DateTime @default(now())
  open    Boolean   @default(false)
  playerMove Move?
  computerMove Move?
  result  ResultKind?
  playerId    String   @db.Uuid
  player  User      @relation(fields: [playerId], references: [id])
}